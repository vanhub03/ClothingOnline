@model List<Cart>
    <head>
        <link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i|Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i">
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
<h2>Gio Hang</h2>

@if (Model.Count > 0)
{
<table style="width:80%; margin: 20px auto">
    <tr>
        <th>#</th>
        <th>San pham</th>
        <th>Gia</th>
        <th>So luong</th>
        <th>Thanh tien</th>
        <th></th>
    </tr>
    @{
        double total = 0;
        int stt = 1;
    }
    @foreach (var item in Model)
    {
        var totalPrice = item.quantity * item.product.Price;
        total += totalPrice;
<tr>
    <td>@(stt++)</td>
    <td>@item.product.Productname</td>
    <td>@(item.product.Price.ToString("n0"))</td>
    <td>@item.quantity</td>
    <td>@(totalPrice.ToString("n0"))</td>
    <td>
        <a type="button" class="btn btn-danger" href="/product/RemoveItemInCart?productId=@item.product.Productid">Xoa</a>
    </td>
</tr>
    }
    <tr>
        <td colspan="4" class="text-right">Tong tien</td>
        <td>@(total.ToString("n0"))</td>
        <td>
    </tr>
</table> 
<a type="button" class="btn btn-success" asp-controller="Order" asp-action="Index">Thanh toan</a>
}
else
{
    <p class="alert alert-danger">Gio hang trong</p>
}