<h2>Giỏ Hàng</h2>

@if (Model.Count > 0)
{
<table class="table table-striped">
    <tr>
        <th></th>
        <th>Sản phẩm</th>
        <th class="text-center">Giá</th>
        <th class="text-center">Số lượng</th>
        <th class="text-center">Thành tiền</th>
        <th></th>
    </tr>
    @{
        double total = 0;
        int stt = 1;
    }
    @foreach (var item in Model)
    {
        var totalPrice = item.quantity * item.product.Price;
        total += totalPrice;
<tr>
    <td class="text-center">@(stt++)</td>
    <td>@item.product.Productname</td>
    <td class="text-center">@(item.product.Price.ToString("n0"))</td>
    <td class="text-center">@item.quantity</td>
    <td class="text-center">@(totalPrice.ToString("n0"))</td>
    <td style="text-align:center">
        <a type="button" class="btn btn-danger" href="/product/RemoveItemInCart?productId=@item.product.Productid">Xóa</a>
    </td>
</tr>
    }
    <tr>
        <td colspan="4" scope="col" class="text-right">
            <strong>Tổng tiền</strong>
        </td>
        <td class="text-center">@(total.ToString("n0")) VND</td>
        <td>
    </tr>
</table> 
<a type="button" class="btn btn-success" asp-controller="Order" asp-action="Index">Thanh toán</a>
}
else
