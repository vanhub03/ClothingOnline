@*@model ClothingOnlineWeb.Models.Account*@
@model List<Product>
<head>
    <link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i|Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<body style="background-color:#f1f2f7">
    <div class="container bootdey row">
        <div class="col-md-3">
            list employee
        </div>
        <div class="col-md-9 px-4 px-lg-5 mt-5 row gx-4 gx-lg-5 row-cols-xl-3 justify-content-center">
            @{ foreach (var p in Model)
                {
                    <div class="col mb-5">
                        <div class="card h-100">
                            <img class="card-img-top" src="~/Images/@p.Images.First().Imagelink" alt="loi" />
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <h5 class="fw-bolder">
                                        <a href="/product/getproductdetail?id=@p.Productid" class="pro-title">
                                            @p.Productname
                                        </a>
                                    </h5>
                                    <strong class="price">@p.Price VND</strong>
                                </div>
                            </div>
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="/product/addtocart?productId=@p.Productid">Add to cart</a></div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</body>
<style type="text/css">
    .pro-title {
        color: #5A5A5A;
        display: inline-block;
        margin-top: 20px;
        font-size: 16px;
    }
</style>

