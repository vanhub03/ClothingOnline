@model ClothingOnlineWeb.Models.Account
@{
    var status = TempData["status"] as String;
}

<div class="text-center mt-5 container-fluid">
    <form style="margin: auto;" asp-controller="Account" asp-action="Register" method="post">
        <h1 class="h3 mb-3 font-weigh-normal">Đăng Ký</h1><br />
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <div class="row mt-3">
                    <div class="col-3 mt-2">
                        User Name:
                    </div>
                    <div class="col-7">
                        <input type="text" asp-for="Username" placeholder="Username" class="form-control" required autofocus />
                        <span asp-validation-for="Username"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-3 mt-2">
                        Password:
                    </div>
                    <div class="col-7">
                        <input type="password" asp-for="Password" id="Password" placeholder="Password" class="form-control" required autofocus />
                        <span asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-3 mt-2">
                        Your Address:
                    </div>
                    <div class="col-7">
                        <input type="text" asp-for="Address" id="Address" placeholder="Address" class="form-control" required autofocus />
                        <span asp-validation-for="Address"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-3 mt-2">
                        Number Phone:
                    </div>
                    <div class="col-7">
                        <input type="number" asp-for="Phone" id="Phone" placeholder="Phone" class="form-control" required autofocus />
                        <span asp-validation-for="Phone"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-3 mt-2">
                        Email:
                    </div>
                    <div class="col-7">
                        <input type="email" asp-for="Email" id="Email" placeholder="Email" class="form-control" required autofocus />
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>
            </div>
            <div class="col-2"></div>
        </div>

        @{
            if (TempData["status"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @status
                </div>
            }
        }
        <div class="mt-3">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Đăng Ký</button>
        </div>
    </form>
</div>