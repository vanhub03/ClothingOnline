@model ClothingOnlineWeb.Models.Account
@{ 
    var status = TempData["status"] as String;
}

<div class="text-center mt-5">
    <form style="max-width:300px;margin: auto;" asp-controller="Account" asp-action="Register" method="post">
        <h1 class="h3 mb-3 font-weigh-normal">Đăng Ký</h1><br />
        <label>User Name: </label>
        <input type="text" asp-for="Username" placeholder="Username" class="form-control" required autofocus />
        <span asp-validation-for="Username"></span>
        <label>Password: </label>
        <input type="password" asp-for="Password" id="Password" placeholder="Password" class="form-control" required autofocus />
        <span asp-validation-for="Password"></span>
        <label>Your Address: </label>
        <input type="text" asp-for="Address" id="Address" placeholder="Address" class="form-control" required autofocus />
        <span asp-validation-for="Address"></span>
        <label>Number Phone: </label>
        <input type="number" asp-for="Phone" id="Phone" placeholder="Phone" class="form-control" required autofocus />
        <span asp-validation-for="Phone"></span>
        <label>Email: </label>
        <input type="email" asp-for="Email" id="Email" placeholder="Email" class="form-control" required autofocus />
        <span asp-validation-for="Email"></span>
        @{
            if (TempData["status"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @status
                </div>
            }
        }
        <div class="mt-3">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Đăng Ký</button>
        </div>
    </form>
</div>